<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="100dp"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/imganhtruyen"
        android:src="@drawable/anh1"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>
    <TextView
        android:id="@+id/txvtenchap"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#A8000000"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/colortrang"
        android:text="Truyen Tranh 1"
        android:textSize="10dp"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/txvtentruyen"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="Ten truyen tranh" ></TextView>
</LinearLayout>